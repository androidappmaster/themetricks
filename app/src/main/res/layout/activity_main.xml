<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/show_activity_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_activity_normal" />

    <Button
        android:id="@+id/show_activity_as_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/show_activity_as_dialog" />

    <Button
        android:id="@+id/show_activity_as_dialog_on_large_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/show_activity_as_dialog_on_large_screen" />

</LinearLayout>
